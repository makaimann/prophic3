(declare-fun inv1 ((Array Int Int) Int Int) Bool)
(declare-fun inv2 ((Array Int Int) Int Int) Bool)

(assert (forall ((a (Array Int Int)) (N Int)) (=> true (inv1 a 0 N))))
(assert (forall ((a (Array Int Int)) (i Int) (N Int) (a1 (Array Int Int)) (i1 Int))
  (=> (and (inv1 a i N) (< i N) (= (store a i i) a1) (= i1 (+ i 1)))
      (inv1 a1 i1 N))))
(assert (forall ((a (Array Int Int)) (i Int) (N Int))
  (=> (and (inv1 a i N) (>= i N)) (inv2 a 2 N))))
(assert (forall ((a (Array Int Int)) (i Int) (N Int) (a1 (Array Int Int)) (i1 Int))
  (let ((a!1 (= (store a i (* (select a i) 2)) a1)))
    (=> (and (inv2 a i N) (< i N) a!1 (= i1 (+ i 1))) (inv2 a1 i1 N)))))
(assert (forall ((a (Array Int Int)) (i Int) (N Int) (i1 Int) (fail Bool))
  (let ((a!1 (and (inv2 a i N)
                  (>= i N)
                  (< 0 i1)
                  (< i1 N)
                  (not (>= (select a i1) (* 2 i1))))))
    (=> a!1 false))))
(check-sat)
